---
interface Props {
	title: string;
	description: string;
	canonical?: string
}

const { title, description, canonical } = Astro.props;
import { ViewTransitions } from 'astro:transitions';
import SEO from '@components/SEO.astro';
import Header from '@components/es/Header.astro';
import Footer from '@components/es/Footer.astro';
---

<!doctype html>
<html lang="es">
	<head>
		<SEO title={title} description={description} canonical={canonical}/>
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
		<ViewTransitions/>
	</body>
</html>
<style is:global>
	:root {
		background-color: #121214;
		background-image: linear-gradient(to top, black, #101011);
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
		scroll-behavior: smooth;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	main {
		margin: auto;
		margin-top: 6rem;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
