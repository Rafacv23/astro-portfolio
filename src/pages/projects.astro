---
import Card from "@components/es/Card.astro";
import Layout from "@layouts/es/Layout.astro";
import { getSortedProjects } from "@lib/api/es/projects";
import ArrowLeft from "@lib/icons/ArrowLeft.astro";
import ArrowTop from "@lib/icons/ArrowTop.astro";
const sortedProjects = getSortedProjects();
---

<Layout title="Proyectos | Rafa Canosa" description="Todos los proyectos creados por Rafa Canosa.">
    <main class="px-4 sm:px-6 lg:px-8">
        <header class="mb-8" id="start">
            <a href="/" title="Volver" class="group mb-2 inline-flex items-center font-semibold leading-tight text-teal-300 text-sm gap-1">
                <ArrowLeft/>
                Volver
            </a>
            <h1 class="text-3xl font-bold mb-4">Todos los Proyectos</h1>
        </header>
        <ul>
            {sortedProjects.map((project) => (
                <Card project={project}/>
            ))}
        </ul>
        <a href="#start" title="Volver al inicio" class="btn bg-transparent text-slate-100 hover:text-teal-300 hover:transition-colors mt-8 flex items-center gap-2">
            <ArrowTop/>
            Volver al inicio
        </a>
    </main>
</Layout>
