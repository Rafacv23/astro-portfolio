---
export const prerender = false
import Project from "../../components/en/Project.astro"
import Layout from "../../layouts/en/Layout.astro"
import {findProjectBySlug} from '../../lib/api/en/findProjectBySlug.js'
const projectSlug = typeof Astro.params.projectSlug === 'string' ? Astro.params.projectSlug : null; // Verificar si projectSlug es una cadena antes de usarlo

const project = projectSlug ? findProjectBySlug(projectSlug) : null;
console.log(project);
---

<Layout title={`Rafa Canosa | ${project ? project.name : ""}`} description={project ? project.description : ""} canonical={`https://rafa-canosa-portfolio.vercel.app/en/${project ? project.slug : ""}`}>
    <main>
        {project ? 
            <Project project={project}/> :
            null
        }
    </main>
</Layout>
