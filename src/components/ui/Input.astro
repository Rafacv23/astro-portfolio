---
interface Props {
    name: string;
    placeholder: string;
}

const { name, placeholder } = Astro.props;
---

<input class="bg-zinc-900 rounded-md border-0 py-2 px-3 text-black dark:text-white focus:outline-none focus:ring-2 focus:ring-teal-300 disabled:cursor-not-allowed disabled:opacity-70" 
type="text" id={name} name={name} placeholder={placeholder} required>
