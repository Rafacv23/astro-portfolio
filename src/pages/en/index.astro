---
import Card from '@components/en/Card.astro'
import CardSkeleton from '@components/loaders/CardSkeleton.astro'
import Layout from '@layouts/en/Layout.astro'
import projectsData from '@lib/data/en/projects.json' 
import { SITE_DESCRIPTION_EN, SITE_NAME_EN, SITE_URL } from '@lib/constants'
import Hero from '@components/en/Hero.astro'
import Contact from '@components/en/Contact.astro'
import Section from '@components/ui/Section.astro'
const importantProjects = projectsData.projects.filter(project => project.important)

---

<Layout title={SITE_NAME_EN} description={SITE_DESCRIPTION_EN} canonical=`${SITE_URL}/en`>
    <main>
        <Hero/>
        <Section title='Projects' more>    
        <ul class="mb-16 scroll-mt-16 md:mb-24 lg:mb-36 lg:scroll-mt-24">
            {projectsData ? importantProjects.map((project) => (
                <Card project={project}/>
            )) : <CardSkeleton/>}
        </ul></Section>
        <Section title='Contact'>
            <Contact/>
        </Section>
    </main>
</Layout>
