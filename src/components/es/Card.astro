---
interface Props {
  project: Project
}

const {project} = Astro.props
import ArrowTopRight from "@lib/icons/ArrowTopRight.astro";
import { Image } from "astro:assets";
import { Github } from "lucide-astro";
---

<li class="mb-12">
	<div class="group relative grid gap-4 pb-1 transition-all sm:grid-cols-7 sm:gap-8 md:gap-4 lg:hover:!opacity-100 lg:group-hover/list:opacity-50">
	  <div class="absolute -inset-x-4 -inset-y-4 z-0 hidden rounded-md transition motion-reduce:transition-none lg:-inset-x-6 lg:block lg:group-hover:bg-zinc-800/50 lg:group-hover:shadow-[inset_0_1px_0_0_rgba(148,163,184,0.1)] lg:group-hover:drop-shadow-lg"></div>
		<a href={project.live} title={project.name} target="_blank">
		  <Image 
			width="800" 
			height="500" 
			loading="lazy" 
			src={project.img} 
			alt={`${project.name}-img`} 
			class="rounded border-2 border-slate-200/10 transition group-hover:border-slate-200/30 sm:order-1 sm:col-span-2 sm:translate-y-1" 
		  />
		</a>
	  <div class="z-10 sm:order-2 sm:col-span-6">
		<header class="flex items-center justify-between">
		  <a 
		  href={project.live} 
		  title={project.name}  
		  target="_blank"
		  class="card-header hover:text-teal-300 hover:transition cursor-pointer text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-white to-teal-300"
		  >
		  <h3 class="inline-flex items-baseline font-medium leading-tight text-slate-100 hover:text-teal-300 focus-visible:text-teal-300 group/link text-base">
			{project.name} 
			<ArrowTopRight/>
		</h3>
	  </a>
	  <a href={project.github} title="View the code on GitHub" target="_blank" rel="noreferrer" class="group mb-2 inline-flex items-center font-semibold leading-tight hover:text-teal-300 text-sm gap-1 text-zinc-300">
		<Github class="h-5 w-5" />
	</a>
	</header>
		<p class="mt-2 text-sm leading-normal text-zinc-300">{project.description}</p>
		<ul class="mt-2 flex flex-wrap">
		  {project.languages.map((lang) => (
			<li class="mr-1.5 mt-2" id={`${project.name}-${lang}`}>
			  <div class="flex items-center rounded-full bg-teal-400/10 px-3 py-1 text-xs font-medium leading-5 text-teal-300">
				{lang}
			  </div>
			</li>
		  ))}
		</ul>
	  </div>
	</div>
  </li>