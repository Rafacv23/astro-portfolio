---
import Layout from '../layouts/es/Layout.astro';
import projectsData from '../lib/data/es/projects.json' 
import Card from '../components/es/Card.astro'
import CardSkeleton from '../components/loaders/CardSkeleton.astro';
---

<Layout title="Rafa Canosa | Trabajos" description='Portfolio de Rafa Canosa. Desarrollador de aplicaciones web Front-end.' canonical='https://rafa-canosa-portfolio.vercel.app/'>
	<main id="start" class="flex flex-col items-center">
		<ul class="flex flex-col gap-8 items-center">
            {projectsData ? projectsData.projects.map((project) => (
                <Card project={project}/>
            )) : <CardSkeleton/>}
        </ul>
        <a href="#start" class="btn bg-white text-black hover:bg-slate-200 hover:transition-colors mt-8">Volver</a>
	</main>
</Layout>
