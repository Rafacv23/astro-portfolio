---
import Languages from '../../../lib/data/es/languages.json'
import Courses from '../../../lib/data/es/courses.json'
import Certificates from '../../../lib/data/es/certificates.json'
import { Image } from "astro:assets";
---

<section>
    <h2 id="tecnologias" class="text-2xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-white to-teal-300">Tecnolog√≠as</h2>
    <ul class="flex flex-col gap-4">
        {Languages.map((lang) => (
            <li>
                <h3 class="text-xl font-semibold">{lang.name}</h3>
                <ul class="flex gap-8 my-4 items-center">
                    {lang.languages.map((l) => (
                        <li class="text-lg">
                            <Image src={l.img} alt={l.alt} width={50} height={50} />
                        </li>
                    ))}
                </ul>
            </li>
        ))}
    </ul>
</section>
<section>
    <h2 id="estudios" class="text-2xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-white to-teal-300">Estudios</h2>
    <ul class="flex flex-col gap-4">
        {Courses.map((course) => (
            <li class="flex gap-4 items-center">
                <Image class="rounded" src={course.img} alt={course.name} width={50} height={50}/>
                <h3>{course.name}</h3>
            </li>
        ))}
    </ul>
</section>
<section>
    <h2 class="text-2xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-white to-teal-300">Certificados</h2>
    <ul class="flex flex-col gap-4">
        {Certificates.map((cert) => (
            <li class="flex gap-4 items-center">
                <Image class="rounded" src={cert.img} alt={cert.name} width={50} height={50}/>
                <h3>{cert.name}</h3>
            </li>
        ))}
    </ul>
</section>